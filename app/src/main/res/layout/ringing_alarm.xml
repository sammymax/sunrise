<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:gravity="center_vertical">

    <Button
            android:text="@android:string/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/alarm_off" android:layout_weight="1"/>
    <Button
            android:text="Snooze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/alarm_snooze" android:layout_weight="1"/>
</LinearLayout>