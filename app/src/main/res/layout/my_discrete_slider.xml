<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Warm White Level (0-255):"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/discreteLabel"
                android:textSize="@dimen/static_font_size"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/discreteLevel" android:layout_weight="1"
                android:textAlignment="textEnd" android:textSize="@dimen/static_font_size"/>
    </LinearLayout>
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="3"
            android:id="@+id/bar"/>
</merge>