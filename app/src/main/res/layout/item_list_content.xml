<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal" android:layout_marginLeft="24dp" android:layout_marginTop="30dp">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent" app:srcCompat="@drawable/ic_color_lens_white_24dp"
            android:id="@+id/menu_item_icon" android:layout_marginRight="12dp"/>
    <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem" android:textColor="#FFFFFF"
            android:gravity="center_horizontal" android:textSize="18sp"/>
</LinearLayout>